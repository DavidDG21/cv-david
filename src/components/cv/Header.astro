---

const {info_links} = Astro.props;
const {first_name, last_name, summary, email_address, phone_number, link_github, link_linkedin} =info_links;
---

<div class="grid grid-cols-6 gap-3">
    <div class="col-span-4 font-heading">
        <p class=" text-3xl font-extrabold tracking-widest uppercase">{first_name}</p>
        <p class=" text-3xl font-extrabold tracking-widest uppercase">{last_name}</p>
        <p class="text-1xl mt-2 text-gray-600">{summary}</p>
    </div>
    <div class="col-span-2">
        <div class="flex mt-2">
            <img src={`${import.meta.env.BASE_URL}/icons/gmail.svg`} alt="gmail icon" class="w-6 h-6 mr-1"/>
            <a class="text-sm" href={`mailto:${email_address}`}>
                {email_address}
            </a>
        </div>

        <div class="flex mt-2">
            <img src={`${import.meta.env.BASE_URL}/icons/phone.svg`} alt="phone icon" class="w-6 h-6 mr-1">
            <p class="text-sm">{phone_number}</p>
        </div>

        <div class="flex mt-2">
            <img src={`${import.meta.env.BASE_URL}/icons/github.svg`} alt=" github icon" class="w-6 h-6 mr-1"/>
            <a href={link_github} target="_blank" rel="noopener noreferrer">
                GitHub
            </a>
        </div>
        
        <div class="flex mt-2">
        <img src={`${import.meta.env.BASE_URL}/icons/linkedin.svg`} alt=" linkedin icon" class="w-6 h-6 mr-1"/>
        <a href={link_linkedin} target="_blank" rel="noopener noreferrer">
        LinkedIn
        </a>
        </div>
        
    </div>
</div>